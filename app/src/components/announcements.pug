include item-info.pug
mixin announcement(bg, verified)
  .announcement
    .announcement-top
      if verified === 'no'
        +item-info('avatar', '@MegaDupka', 'yes', 'yes', 'no')
      else 
        +item-info('avatar', '@MegaDupka', 'no', 'no', 'yes')
      .premium-info 
        .premium-info__row 
          img(src="images/money.svg", alt="money").premium-info__img
          p.premium-info__p 5000₽
        .premium-info__row 
          img(src="images/discussion.svg", alt="money").premium-info__img
          p.premium-info__p 450
    .announcement-content
      p.announcement__title Рефаунд отелей на сайтах еды Delivery Club
