mixin link(page, link, text, img)
  li 
    if page == link
      a(href="#!").menu__link.active <img src="images/#{img}.svg" />#{text}
    else
      a(href=link+".html").menu__link <img src="images/#{img}.svg" />#{text} 


mixin menu(page)
  .menu
    ul.menu__list 
      each item in [{link: 'index', text:'Маркет', img: 'cart'},{link: 'deals', text:'Сделки', img: 'deals'},{link: 'profile', text:'Профиль', img: 'useri'},{link: 'users', text:'Пользователи', img: 'users'},{link: 'faq', text:'FAQ', img: 'question'},{link: 'charity', text:'Благотворительность', img: 'sun'}]
        +link(page, item.link, item.text, item.img) 


mixin fixed-link(page, link, text, img)
  li 
    if page == link && text !== 'Меню'
      a(href="#!").fixed-menu__link.active <img src="images/#{img}.svg" />#{text}
    if page !== link && text !== 'Меню'
      a(href=link+".html").fixed-menu__link <img src="images/#{img}.svg" />#{text} 
    if text == 'Меню'
      button(type="button").fixed-menu__button.fixed-menu__link <img src="images/#{img}.svg" /> #{text}

mixin fixed-menu(page)
  ul.fixed-menu
    each item in [{link: 'profile', text:'Профиль', img: 'useri'},{link: 'deals', text:'Сделки', img:'deals'},{link: 'index', text:'Маркет', img: 'cart'},{link: 'users', text:'USERS',img: 'users'},{link: '#!', text:'Меню',img: 'menu'}]
      +fixed-link(page, item.link, item.text, item.img) 
